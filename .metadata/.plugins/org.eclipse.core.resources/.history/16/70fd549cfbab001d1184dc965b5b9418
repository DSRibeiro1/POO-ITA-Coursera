
public class Carros {
	int potencia;
	int velocidade;
	String nome;
	
	void acelera() {
		velocidade += potencia;
	}
	void frear() {
		velocidade /= 2;
	}
	int getVelocidade() {
		return velocidade;
	}
	void imprimir() {
		System.out.println("O carro "+nome+" está a velocidade de "+getVelocidade()+ "km/h");
	}

}
