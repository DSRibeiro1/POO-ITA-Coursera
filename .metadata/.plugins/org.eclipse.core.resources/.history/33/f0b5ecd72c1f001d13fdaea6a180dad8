package Teste;

import java.util.Scanner;

public class Teste{
	

	public static void main(String[]args) {
		
		lerDados();
		
	}
	
	public static void lerDados() {
		Scanner console = new Scanner(System.in);
		System.out.println("Digite número inicial da P.A: ");
		int numI = console.nextInt();
		System.out.println("Digite razão da P.A: ");
		int razao = console.nextInt();
		System.out.println("Digite número de termos da P.A: ");
		int nTermos = console.nextInt();
		
		int PA = calcPA(numI,razao,nTermos);
		mostrarPA(numI,nTermos,razao,PA);
		
	}
		
		public static int calcPA(int numI,int razao,int nTermos) {
			if(nTermos == 1) {
				return numI;
			}else {
				
				System.out.println(" "+numI+razao);
				
				return numI +((nTermos-1)*razao);
			}
		}
	
		public static void mostrarPA(int numI,int nTermos, int razao,int PA) {
			System.out.println("Número inicial da P.A: é "+numI+
					"\nRazão da P.A é: "+razao+
					"\nNúmero de Termos: "+nTermos+
			         "\nResultado da PA: "+PA);
			
		}
}
					
		


				
			


			
		


			
		

		
						
			
		


			
		

			
		
		
				
			
		
			
				
	

			
		
	
	
		 
	
		 
	
	
				 		 
				 
			 				 
				 
				 
			 
		
		
	
	

	
	
		
		
		

